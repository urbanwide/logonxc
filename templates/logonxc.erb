#define POWER 50 // was 50
#define TURN_TIME_90 1800 // was 1670
#define PACE_TIME 100 // was 1000

sub print(string text) {
  ClearScreen();
  TextOut(0,0, text);
}

inline int degrees_to_turn_time(int degrees) {
  float one_degree_time = TURN_TIME_90 / 90.0;
  int turn_time = one_degree_time * degrees;
  return turn_time;
}

sub turn(int degrees) {
  if (degrees < 0) {
    degrees = degrees * -1;
    OnRev(OUT_C, POWER);
    OnFwd(OUT_B, POWER);
  } else {
    OnFwd(OUT_C, POWER);
    OnRev(OUT_B, POWER);
  }
  Wait(degrees_to_turn_time(degrees));
  Off(OUT_BC);
  Wait(1000);
}

sub right(int degrees) {
  turn(degrees);
}

sub left(int degrees) {
  turn(-degrees);
}

sub forward(int paces) {
  OnFwd(OUT_BC, POWER);
  Wait(paces * PACE_TIME);
}

sub back(int paces) {
  OnRev(OUT_BC, POWER);
  Wait(paces * PACE_TIME);
}

